<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="How likely is it that you would recommend Mahabharat to a friend or colleague?" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_grey_border"
        android:padding="10dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/tvRating2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_grey_border"
        android:padding="10dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/tvRating3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvRating1"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_grey_border"
        android:padding="10dp"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/tvRating4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvRating2"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_grey_border"
        android:padding="10dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/tvRating5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvRating3"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_grey_border"
        android:padding="10dp"
        android:text="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvRating4"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textColor="#3E3E3E"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRating1"
        tools:text="@string/et_rating_sub_description" />

</androidx.constraintlayout.widget.ConstraintLayout>